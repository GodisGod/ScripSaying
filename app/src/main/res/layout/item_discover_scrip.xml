<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/scrip_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/scrip_img"
            android:layout_alignTop="@id/scrip_img"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignRight="@id/scrip_img"
            android:layout_alignTop="@id/scrip_img"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_send_user_type"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/scrip_img"
            android:layout_alignLeft="@id/scrip_img"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/img_send_user_audio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/img_send_user_type"
            android:layout_below="@id/img_send_user_type"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/img_send_user_type"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_send_user_audio"
            android:gravity="center_vertical"
            android:text="时间长度： 20s " />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/img_send_user_audio"
            android:layout_below="@id/img_send_user_audio"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:text="aaaaa这是一段很长的文字" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_reply"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:text="回复" />
        </FrameLayout>

    </RelativeLayout>
</ScrollView>
