<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.feiyu.scripsaying.activity.PaperEditTextActivity">

    <ImageView
        android:id="@+id/img_usericon_scrip_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/img_scrip_tag_scrip_text"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#975a" />

    <EditText
        android:id="@+id/edit_text_content_script_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_scrip_tag_scrip_text"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext"
        android:gravity="top"
        android:maxLines="20"
        android:minLines="10"
        android:padding="5dp" />

    <Button
        android:id="@+id/btn_send_scrip_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="发布" />
</RelativeLayout>
