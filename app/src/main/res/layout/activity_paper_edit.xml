<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/edit_img_content"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp" />

            <ImageView
                android:id="@+id/edit_img_usericon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/edit_img_scrip_tag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#975a" />

            <ImageView
                android:id="@+id/edit_img_scrip_audio"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/edit_img_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/edit_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_img_scrip_audio"
                android:layout_marginTop="10dp"
                android:maxLength="100" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/edit_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/ic_launcher" />
</LinearLayout>
