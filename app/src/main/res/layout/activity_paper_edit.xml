<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:id="@+id/edit_img_content"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/edit_img_usericon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/edit_img_scrip_tag"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_launcher" />

            <com.feiyu.scripsaying.util.recorder.RecordButton
                android:id="@+id/edit_btn_scrip_audio"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_below="@id/edit_img_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_recorder_normal"
                android:gravity="center"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="@string/str_recorder_normal"
                android:textColor="#727272" />

            <TextView
                android:id="@+id/edit_tv_audio_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_img_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/edit_btn_scrip_audio"
                android:text="" />

            <EditText

                android:id="@+id/edit_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_btn_scrip_audio"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/edit_send"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/ic_launcher" />
</LinearLayout>
